{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "lib": [ "dom", "es2018" ],
      "moduleResolution": "node",
      "sourceMap": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "preserveConstEnums": true,
      "suppressImplicitAnyIndexErrors": true,
      "forceConsistentCasingInFileNames": true,
      "pretty": true,
      "removeComments": false,
      "alwaysStrict": true,
      "declarationDir": "@types",
      "declaration": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": false,
      "typeRoots": [
        "./node_modules/@types/"
      ]
    },
    "include": [
      "src",
      "lib",
      "configuration", "__tests__/configuration/schema-validator.spec.ts"
    ],
    "exclude": [
        "node_modules",
        "typings",
        "@types"
    ],
  }
